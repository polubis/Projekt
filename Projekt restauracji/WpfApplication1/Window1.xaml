        <Button x:Name="zamknijButt" Content="X" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Margin="496,30,0,0" Click="zamknijButt_Click" RenderTransformOrigin="-2.75,-0.05"/>
