<Window x:Class="WpfApplication1.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu" Height="300" Width="500">
      <Window.CommandBindings>
        <CommandBinding Command="Close"
                      CanExecute="CommandBinding_CanExecute_3"
                        Executed="CommandBinding_Executed_3"
                   />
        <CommandBinding Command="Open"
                        CanExecute="CommandBinding_CanExecute_2"
                        Executed="CommandBinding_Executed_2"
                        />
    </Window.CommandBindings>
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Right">
                <MenuItem Header="Opcje" HorizontalAlignment="Center" Margin="5" >
                    <MenuItem Header="Kalkulator" Command="Open" InputGestureText="CTRL+K">
                        <MenuItem.Icon>
                            <Image Source="Pictures/calcIcon.png" Width="15"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Sortuj">
                        <MenuItem.Icon>
                            <Image Source="Pictures/searchIcon.png" Width="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Wyjście" Command="Close">
                        <MenuItem.Icon>
                            <Image Source="Pictures/exitIcon.png" Width="21"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
        <DockPanel Margin="10">
            <TextBox DockPanel.Dock="top" Width="100" HorizontalAlignment="Left" Margin="10,30,0,10" Name="txtFilter" TextChanged="txtFilter_TextChanged" RenderTransformOrigin="-1.714,0.738" />
            <ListView Name="listaDan">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" Width="20" DisplayMemberBinding="{Binding ID}" />
                        <GridViewColumn Header="Danie" Width="100" DisplayMemberBinding="{Binding Danie}" />
                        <GridViewColumn Header="Cena" Width="50" DisplayMemberBinding="{Binding Cena}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
    </Grid>
</Window>
